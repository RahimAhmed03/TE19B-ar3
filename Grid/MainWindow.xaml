<Window x:Class="Grid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinitions Height="auto" />    
            <RowDefinitions Height="auto" />    
            <RowDefinitions Height="*" />    
            <RowDefinitions Height="auto" />    
            <RowDefinitions Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinitions Height="auto" />    
            <ColumnDefinitions Height="auto" />    
        </Grid.ColumnDefinitions>   

        <Label Grid.Row="0" Grid.ColumnSpan="2" Fontsize="24">Meddelande</Label>

        <Label Grid.Row="1" Grid.Column="0">Ange epostadress</Label>
        <TextBox Grid.Row="1" Grid.Column="0" />
        <Label Grid.Row="2" Grid.Column="0">Ange text</Label>
        <TextBox Grid.Row="2" Grid.Column="1" MinHeight="50" />

        <Button Grid.Row="3" Grid.ColumnSpan="2">Skicka!</Button>

        <TextBox Grid.Row="4" Grid.ColumnSpan="2" Foreground="#999" IsReadOnly="true"/>
    </Grid>
</Window>
