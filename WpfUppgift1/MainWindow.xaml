<Window x:Class="WpfUppgift1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUppgift1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label>Ceasarkrypto</Label>

        <Label>Ange en text</Label>
        <TextBox Name="rutaText" Margin="5" Height="50"/>

        <Label>Ange en nyckel(1-9)</Label>
        <TextBox Name="rutaNyckel" Margin="5" Height="50" />

        <Button Click="Click_KÖR" Margin="5">KÖR</Button>

        <Label>Krypterad text</Label>
        <TextBox Name="rutaKrypterad" Margin="5" Height="50" AcceptsReturn="True" IsReadOnly="True" FontStyle="Italic"/>
    </StackPanel>

</Window>
